BINARIES := cjs-ledger cjs-manifest

build:

Makefile: configure Makefile.in
	./config.status

install:
	install -D --target-directory=$(DESTDIR)@bindir@ $(BINARIES)

clean:
	$(MAKE) -C tests clean


distclean:
	@rm -f Makefile config.status

release:
	tools/release.sh


TEST_MYPY = $(addprefix .test-mypy-,$(BINARIES))
test: $(TEST_MYPY)
	$(MAKE) -C tests

.test-mypy-%: %
	mypy --strict $<
	touch $@

.PHONY: test
